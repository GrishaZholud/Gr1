<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
<stylesheets>
    <URL value="@name.css"/>
</stylesheets>

    <Button text="Send Message" GridPane.rowIndex="9" GridPane.columnIndex="9" onAction="#sendMessage" />
    <TextField fx:id="textField" GridPane.rowIndex="9" GridPane.columnIndex="0" prefWidth="200" promptText="Введите сообщение"/>
    <TextArea fx:id="textArea" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="400" editable="false"/>
    <TextField fx:id="textFieldName" GridPane.rowIndex="10" GridPane.columnIndex="0" prefWidth="10" promptText="Введите имя"/>
    <Button text="Get Name" GridPane.rowIndex="10" GridPane.columnIndex="9" onAction="#getname"/>


</GridPane>